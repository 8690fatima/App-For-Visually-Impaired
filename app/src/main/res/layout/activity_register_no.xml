<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradiant"
    android:layout_height="match_parent"
    tools:context=".Emergency_no">



        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:text="Enter Number To\nCALL\nin\nEMERGENCY!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/number1"
            android:textAlignment="center"
            android:hint="Contact Number1"
            android:inputType="phone"
            android:layout_below="@id/text1"
            />

        <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/number2"
        android:textAlignment="center"
        android:hint="Contact Number2"
            android:inputType="phone"
        android:layout_below="@id/number1"
        />

        <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/number3"
        android:textAlignment="center"
        android:hint="Contact Number3"
            android:inputType="phone"
        android:layout_below="@id/number2"
        />





    <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/number3"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#ffffff"
            android:onClick="saveNumber"
            android:text="Finish"
            android:textColor="@color/black"
            app:cornerRadius="10dp" />

    </RelativeLayout>


